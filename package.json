{
  "name": "thegrid-apidocs",
  "version": "0.0.5",
  "description": "API documentation for The Grid",
  "repository": {
    "type": "git",
    "url": "git://github.com/the-grid/apidocs.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/the-grid/apidocs/issues"
  },
  "main": "index.coffee",
  "files": [
    "index.coffee",
    "schemata",
    "schema",
    "examples"
  ],
  "homepage": "https://thegrid.io",
  "dependencies": {
    "coffee-script": "^1.7.1",
    "js-yaml": "^3.2.5"
  },
  "devDependencies": {
    "chai": "^1.9.1",
    "coffeelint": "^1.8.1",
    "grunt": "^0.4.4",
    "grunt-coffeelint": "0.0.13",
    "grunt-contrib-clean": "^0.5.0",
    "grunt-contrib-copy": "^0.7.0",
    "grunt-exec": "^0.4.6",
    "grunt-gh-pages": "^0.9.1",
    "grunt-mocha-test": "^0.12.7",
    "grunt-yaml": "^0.4.1",
    "grunt-yamllint": "^0.2.0",
    "json-schema-docs-generator": "^0.10.0",
    "mocha": "^2.1.0",
    "tv4": "^1.1.9"
  },
  "scripts": {
    "test": "grunt test"
  },
  "json-schema-docs": {
    "schemas": [
      "schema/*.json"
    ],
    "pages": {
      "index": "*"
    },
    "templates": [
      "./node_modules/json-schema-docs-generator/themes/bootstrap/*"
    ],
    "apiURL": "https://api.thegrid.io",
    "endpointOptions": {
      "attributes": ["title", "description", "method"],
      "attributeParameters": ["name", "type", "example", "description"],
      "curlHeaders": {
        "Authorization": "Bearer INSERT_YOUR_TOKEN"
      }
    },
    "templateOptions": {
      "version": "0.0.1"
    }
  }
}
